#!/bin/bash

# Add folders here
vimdir="$HOME/.vim"
aladir="$HOME/.config/alacritty"

# Add symlink paths here
declare -a symlinks=(
"$PWD/bashrc $HOME/.bashrc"
"$PWD/bash_profile $HOME/.bash_profile"
"$PWD/xinitrc $HOME/.xinitrc"
"$PWD/inputrc $HOME/.inputrc"
"$PWD/vimrc $vimdir/vimrc"
"$PWD/tmux.conf $HOME/.tmux.conf"
"$PWD/git-prompt.sh $HOME/.git-prompt.sh"
"$PWD/alacritty.yml $HOME/.config/alacritty/alacritty.yml"
"$PWD/taskrc $HOME/.taskrc"
)

# Check if $HOME/.vim exists if not create it
if [[ ! -d "${vimdir}" ]]; then
  mkdir -p ${vimdir}
  if [[ $? -eq 0 ]]; then
    echo "Creating .vim directory in ${HOME}"
  fi
else
  echo "${vimdir} already exists"
fi

# Check if $HOME/.config/alacritty exists if not create it
if [[ ! -d "${aladir}" ]]; then
  mkdir -p ${aladir}
  if [[ $? -eq 0 ]]; then
    echo "Creating alacritty directory in ${aladir}"
  fi
else
  echo "${aladir} already exists"
fi

# Create the symlink
for i in "${symlinks[@]}"; do
  ln -sf $i
  if [[ $? -eq 0 ]]; then
    echo "Creating symlink: ${i}"
  fi
done
